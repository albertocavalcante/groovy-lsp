<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender that outputs to stderr to avoid LSP protocol pollution -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration - keep at INFO to avoid dependency spam -->
    <root level="INFO">
        <appender-ref ref="STDERR" />
    </root>

    <!-- Groovy LSP specific logger -->
    <!-- TODO: Change back to INFO level after debugging hover issues -->
    <!-- Temporarily set to DEBUG for troubleshooting hover position resolution -->
    <logger name="com.github.albertocavalcante.groovylsp" level="DEBUG" />
    <logger name="GroovyLSP" level="DEBUG" />

    <!-- Reduce verbosity of some dependencies -->
    <logger name="org.eclipse.lsp4j" level="WARN" />
    <logger name="org.codehaus.groovy" level="WARN" />
</configuration>